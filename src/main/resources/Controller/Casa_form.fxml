<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="325.0" prefWidth="392.0" spacing="20.0" style="-fx-background-color: #bbbbbb;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Audio_System_Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label fx:id="label_nume_sistem" alignment="CENTER" contentDisplay="CENTER" prefHeight="42.0" prefWidth="337.0" text="Introduceti numele noului Audio Sistem!">
        <font>
            <Font name="System Bold Italic" size="14.0" />
        </font>
    </Label>
    <TextField fx:id="field_nume_sistem" alignment="CENTER" onAction="#onHelloButtonClick" promptText="Enter New AudioSystem Name" />
    <Button fx:id="button_sistem_form" onAction="#onHelloButtonClick" prefHeight="41.0" prefWidth="94.0" text="Next">
        <effect>
            <ColorAdjust brightness="-0.02" contrast="0.28" hue="-0.89" saturation="0.21" />
        </effect>
    </Button>
    <Button fx:id="Sistem_next_camere" mnemonicParsing="false" onAction="#onSistem_next_camere" prefHeight="43.0" prefWidth="272.0" text="Vedeti camerele conectate la sistem" visible="false">
        <font>
            <Font name="System Bold Italic" size="14.0" />
        </font>
    </Button>
    <Button fx:id="butt_close_casa" mnemonicParsing="false" onAction="#on_back" prefHeight="33.0" prefWidth="91.0" text="Close" visible="false">
        <font>
            <Font name="System Bold" size="14.0" />
        </font>
    </Button>
</VBox>
